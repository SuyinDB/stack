
<% @stories.each do |story| %>

	<div class ="story">
		<h2><%= link_to story.title, story.link %></h2>
		<p><%= story.description %></p>
		<p><%= link_to (pluralize story.comments.size, "comment"), story_path(story) %>
		<p><%= pluralize story.votes_count, "vote" %>
		<%= link_to "Upvote", story_votes_path(story), method: :post %></p>

	</div>

<% end %>

<p> 
	<%= link_to "add a new story", new_story_path, class: "button" %>
</p>
